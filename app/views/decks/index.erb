<h1><%= @deck.category %></h1>

<% @deck.cards.each do |card| %>
  <form action="/deck/:id" method= "post">
    <label for="title_input"><%= card.question %></label>
    <input id="title_input" name="guess[user_guess]" type="text" value="<%= @user_guess.try(:user_guess) %>">
    <br>
    <input type = "submit" value = "Answer">
  </form>
<%end%>
